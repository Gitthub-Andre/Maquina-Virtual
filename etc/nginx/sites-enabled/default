server {
    listen 80;
    server_name _;

    # Permitir uploads grandes (até 10GB)
    client_max_body_size 10G;
    proxy_read_timeout 600s;
    proxy_connect_timeout 600s;
    proxy_send_timeout 600s;

    # Desativa cache
    add_header Cache-Control "no-cache, no-store, must-revalidate";
    add_header Pragma "no-cache";
    add_header Expires "0";

    # Content Security Policy para permitir scripts e estilos inline e Font Awesome CDN
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com;";

    location /uploads/ {
        alias /home/ubuntu/Servidor/uploads/;
        autoindex on;
    }

    location / {
        proxy_pass http://127.0.0.1:5001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # Redundante se não houver proxy_cache definido, mas não faz mal
        proxy_no_cache 1;
        proxy_cache_bypass 1;

        # Linha ESSENCIAL para JWT funcionar:
        proxy_set_header Cookie $http_cookie;
    }
}