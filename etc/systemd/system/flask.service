[Unit]
Description=Flask App com Gunicorn
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/Servidor
Environment="PATH=/home/ubuntu/Servidor/venv/bin"
ExecStart=/home/ubuntu/Servidor/venv/bin/gunicorn -w 4 -b 0.0.0.0:5001 --timeout 600 app:app
Restart=always

[Install]
WantedBy=multi-user.target